<div class="article">
  <p><%= @name %>さんの投稿一覧</p>
  <% @tweets.each do |tweet| %>
    <div class="row">
      <div class="col s12 m6">
        <div class="card grey darken-1">
          <div class="card-content white-text">
            <span class="card-title"><%= tweet.title %></span>
            <%= simple_format(tweet.text) %>
          </div>
          <div class="card-action">
            <%= link_to 'Show', "/tweets/#{tweet.id}", class: 'white-text', method: :get %>
            <% if user_signed_in? && current_user.id == tweet.user_id %>
              <%= link_to 'Edit', "/tweets/#{tweet.id}/edit", class: 'white-text', method: :get %>
              <%= link_to 'Delete', "/tweets/#{tweet.id}", class: 'white-text', method: :delete %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  <%= paginate(@tweets) %>
</div>

