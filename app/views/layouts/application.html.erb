<!DOCTYPE html>
<html>
<head>
  <title>Learningtweet</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <script
  src="https://code.jquery.com/jquery-3.3.1.js"
  integrity="sha256-2Kok7MbOyxpgUVvAk/HJ2jigOSYS2auK4Pfzbm7uH60="
  crossorigin="anonymous"></script>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <!-- Compiled and minified CSS -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.min.css">

  <!-- Compiled and minified JavaScript -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js"></script>
</head>
<body>

  <nav class="grey darken-1">
    <div class="nav-wrapper">
      <a href="/" class="brand-logo">LearningTweet</a>
      <% if user_signed_in? %>
        <ul id="nav-mobile" class="right hide-on-med-and-down">
          <li><a href="/users/<%= current_user.id %>"><%= current_user.name %></a></li>
          <li><%= link_to "Sign_out", destroy_user_session_path, method: :delete %></li>
          <li><%= link_to "Post", new_tweet_path %></li>
        </ul>
      <% else %>
        <ul id="nav-mobile" class="right hide-on-med-and-down">
          <li><%= link_to "Sign_in", new_user_session_path %></li>
          <li><%= link_to "Sign_up", new_user_registration_path %></li>
        </ul>
      <% end %>
    </div>
  </nav>

  <%= yield %>

  <footer class="grey darken-1">
    <p class="white-text">
      Copyright PicTweet 2014.
    </p>
  </footer>

</body>
</html>
